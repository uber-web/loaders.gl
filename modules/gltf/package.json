{
  "name": "@loaders.gl/gltf",
  "version": "3.0.0-alpha.18",
  "description": "Framework-independent loader for the glTF format",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/visgl/loaders.gl"
  },
  "keywords": [
    "webgl",
    "loader",
    "3d",
    "mesh",
    "point cloud",
    "GLB",
    "glTF"
  ],
  "types": "src/index.d.ts",
  "main": "dist/es5/index.js",
  "module": "dist/esm/index.js",
  "sideEffects": false,
  "bin": {
    "glbdump": "./bin/glbdump.js"
  },
  "files": [
    "src",
    "dist",
    "bin",
    "README.md"
  ],
  "scripts": {
    "pre-build": "npm run build-bin && npm run build-bundle",
    "build-bundle": "webpack --display=minimal --config ../../scripts/webpack/bundle.js",
    "build-bin": "BABEL_ENV=es5 babel scripts --config-file ../../babel.config.js --out-dir dist/scripts"
  },
  "dependencies": {
    "@loaders.gl/core": "3.0.0-alpha.18",
    "@loaders.gl/draco": "3.0.0-alpha.18",
    "@loaders.gl/images": "3.0.0-alpha.18",
    "@loaders.gl/loader-utils": "3.0.0-alpha.18"
  }
}
