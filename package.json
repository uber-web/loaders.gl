{
  "name": "loaders.gl",
  "description": "Framework-independent loaders for visualization, 3D graphics and geospatial formats",
  "license": "MIT",
  "private": "true",
  "repository": {
    "type": "git",
    "url": "https://github.com/uber-web/loaders.gl"
  },
  "keywords": [
    "webgl",
    "loader",
    "3d",
    "point cloud",
    "GLB",
    "OBJ",
    "PLY",
    "LAZ",
    "PCD",
    "KML"
  ],
  "workspaces": [
    "modules/*"
  ],
  "browser": {
    "module-alias": false
  },
  "scripts": {
    "start": "echo 'Please see loaders.gl website for how to run examples' && open https://uber-web.github.io/loaders.gl/#/docs/overview/introduction",
    "bootstrap": "scripts/bootstrap.sh",
    "build": "lerna run build",
    "cover": "NODE_ENV=cover nyc node test/start",
    "lint": "eslint modules test && npm run lint-yarn",
    "lint-examples": "eslint examples",
    "lint-yarn": "!(grep -q unpm.u yarn.lock) || (echo 'Please rebuild yarn.lock file using public npmrc' && false)",
    "lint-docs": "scripts/lint-markdown.sh",
    "publish-prod": "npm run bootstrap && npm run test && npm run test dist && lerna publish --cd-version patch",
    "publish-beta": "npm run bootstrap && npm run build && npm run test && npm run test dist && lerna publish --npm-tag beta --cd-version prerelease",
    "test": "scripts/test.sh",
    "test-browser": "node test/start.js browser",
    "test-render": "node test/start.js render",
    "bench-browser": "webpack-dev-server --config test/webpack.config.js --env.bench --progress --hot --open",
    "collect-metrics": "scripts/collect-metrics.sh",
    "pre-commit": "scripts/test.sh fast"
  },
  "devDependencies": {
    "@babel/cli": "^7.0.0",
    "@babel/core": "^7.0.0",
    "@babel/plugin-transform-runtime": "^7.0.0",
    "@babel/preset-env": "^7.0.0",
    "@babel/register": "^7.0.0",
    "@probe.gl/test-utils": "^3.0.0-alpha.4",
    "arraybuffer-loader": "^1.0.6",
    "babel-eslint": "^9.0.0",
    "babel-loader": "^8.0.0",
    "babel-plugin-inline-import": "^3.0.0",
    "babel-plugin-istanbul": "^5.0.0",
    "codecov": "^3.1.0",
    "coveralls": "3",
    "eslint": "^3.0",
    "eslint-config-uber-es2015": "^3.0.0",
    "eslint-plugin-babel": "^5.1.0",
    "html-webpack-plugin": "^3.0.7",
    "lerna": "^2.9.1",
    "luma.gl": "^6.4.0",
    "markdownlint-cli": "^0.8.1",
    "mkdirp": "^0.5.1",
    "module-alias": "^2.2.0",
    "nyc": "^13.0.0",
    "pre-commit": "^1.2.2",
    "raw-loader": "^0.5.1",
    "reify": "^0.18.1",
    "source-map-loader": "^0.2.1",
    "source-map-support": "^0.4.2",
    "tap-browser-color": "^0.1.2",
    "tape": "^4.9.0",
    "tape-promise": "^4.0.0",
    "webpack": "^4.20.2",
    "webpack-bundle-analyzer": "^2.11.1",
    "webpack-cli": "^3.1.2",
    "webpack-dev-server": "^3.1.1"
  },
  "pre-commit": [
    "pre-commit"
  ]
}
